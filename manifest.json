{
  "manifest_version": 3,
  "name": "LinkedIn Job Scraper",
  "version": "4.0",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}