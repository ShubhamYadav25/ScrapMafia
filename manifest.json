{
  "manifest_version": 3,
  "name": "LinkedIn Job Scraper",
  "version": "1.0",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}